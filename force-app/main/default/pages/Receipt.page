<apex:page standardController="Receipt__c" extensions="ReceiptVFPController" renderAs="pdf" showHeader="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" standardStylesheets="false">
  
  <style type="text/css">
    @page {
      size: A4;
      margin: 40px;
      font-family: Arial, sans-serif;
      line-height: 1.5;
      font-size: 12px;
    }
    strong {
      font-weight: bold;
    }
      .header {
            text-align: center;
            font-weight: bold;
            margin-bottom: 10px;
        }
    td {
      padding-left: 0;
    }
    .no-left-padding { 
      padding-left: 0;
    }
  </style>

  <div style="width:100%; height:100%; border:1.2px solid black; margin:0; background:#fff; font-size:12px; padding:0;">
      <table width="100%"   cellpadding="0" cellspacing="0" >
                    <tr>
                         <td style="font-size: 12px;text-align:left"> <img src="{!$Resource.Zuari}" width="150px" height="60" /></td>
                        
                         <td style="font-size: 12px;text-align:right"><img src="{!$Resource.ZuariPlotlogo}" width="150px" height="60" /></td>
                        
                         
                       </tr>
                  </table>
      <div style="text-align:center;" class="header"><b>
          ZUARI INFRAWORLD INDIA LIMITED<br/>
          Adventz Centre, 1st Floor, No. 28, Union Street, Off Infantry Road<br/>
          Bangalore, Karnataka, India 560001<br/>
          <strong>GST No:</strong> 29AAACZ2305D1ZM<br/></b>
      </div>
   

    <br/>
    <div style="height:15px; padding:10px 0; text-align:center;">
      <strong>Receipt</strong>
    </div>

    <div style="padding:10px 0; text-align:right; float:right; margin-right:125px;">
      Date : &nbsp;
      <apex:outputText value="{0,date,dd'-'MM'-'yyyy}">
        <apex:param value="{!Receipt__c.Receipt_Date__c}" />
      </apex:outputText>
    </div>

    <br/><br/><br/>

    <div>
      <table width="100%" cellspacing="0" cellpadding="0" style="border-collapse:collapse; border:none;">
        <tr><td style="border:none; padding:6px 0;font-size:13px;">We thank you and confirm receiving the payment/s from:</td></tr>
        <tr><td style="border:none; padding:2px 0;">Applicant: {!Receipt__c.booking__r.S__c} {!Receipt__c.booking__r.First_Applicant_Name__c}</td></tr>
        <tr><td style="border:none; padding:2px 0;"><apex:outputText rendered="{!NOT(ISBLANK(firstCoApplicant.Salutation__c))}">Co-Applicant: {!firstCoApplicant.Salutation__c} {!firstCoApplicant.Name}</apex:outputText></td></tr>
        <tr><td style="border:none; padding:2px 0;">Customer GST No: {!Receipt__c.booking__r.Customer_GSTIN__c}</td></tr>
        <tr><td style="border:none; padding:2px 0;">For the Plots, Plot No. <b>{!plotName}</b> Project â€“ Zuari Garden City - <b>Plots</b></td></tr>
      </table>
    </div>

    <div>
      <table border="1" cellspacing="0" cellpadding="0" style="width:100%; border-collapse:collapse; border:1.01px solid black;">
        <tr>
          <td style="width:50%; text-align:center; border:1px solid black; padding:5px 0;">Event</td>
          <td style="width:50%; text-align:center; border:1px solid black; padding:5px 0;">Amount</td>
        </tr>
        <tr>
          <td style="border:1px solid black; padding:5px 0;">On Sale Consideration</td>
          <td style="border:1px solid black; text-align:center; padding:5px 0;">{!Receipt__c.Total_Received_Amount__c}</td>
        </tr>
      </table>
    </div>

    <br/>
    <div><strong>Payment Details:</strong></div>
    <br/>

    <table width="100%" cellspacing="0" cellpadding="0" style="border-collapse:collapse;">
      <tr>
        <th style="border:1px solid #000; text-align:center; padding:6px; width:15%;">Payment Type</th>
        <th style="border:1px solid #000; text-align:center; padding:6px; width:20%;">Cheque/DD/Transfer No.</th>
        <th style="border:1px solid #000; text-align:center; padding:6px; width:13%;">Date</th>
        <th style="border:1px solid #000; text-align:center; padding:6px; width:16.7%;">Drawn on</th>
        <th style="border:1px solid #000; text-align:center; padding:6px; width:16.6%;">Branch</th>
        <th style="border:1px solid #000; text-align:center; padding:6px; width:16.6%;">Amount (Rs)</th>
      </tr>

      <apex:repeat value="{!receiptLineItems}" var="item">
        <tr>
          <td style="border:1px solid #000; padding:10px 6px; text-align:center;">{!item.Payment_schedule__r.Name}</td>
          <td style="border:1px solid #000; padding:10px 6px; text-align:center;">{!item.Cheque_no_Transaction_Number__c}</td>
          <td style="border:1px solid #000; padding:10px 6px; text-align:center;"><apex:outputText value="{0,date,dd'-'MM'-'yyyy}"><apex:param value="{!Receipt__c.Receipt_Date__c}"/></apex:outputText></td> 
          <td style="border:1px solid #000; padding:10px 6px; text-align:center;"><apex:outputText value="{0,date,dd'-'MM'-'yyyy}"><apex:param value="{!item.Drawn_On__c}"/></apex:outputText></td> 
          <td style="border:1px solid #000; padding:10px 6px; text-align:center;">{!item.Branch__c}</td>
          <td style="border:1px solid #000; padding:10px 6px; text-align:center;">{!item.Received_Amount__c}</td>
        </tr>
      </apex:repeat>
    </table>

    <table width="100%" cellspacing="0" cellpadding="0" style="border-collapse:collapse; margin-top:10px;">
      <tr>
        <td style="border:none; padding:6px 4px 6px 0;"><strong>Amount in words: {!amountinWords}</strong></td>
        <td style="width:105px; text-align:center; border:1px solid #000; padding:6px;"><strong>Rs.</strong></td>
        <td style="width:105px; text-align:center; border:1px solid #000; padding:6px;"><strong>{!totalReceivedAmount}</strong></td> 
      </tr>
    </table>

    <div class="note" style="margin-top:8px; font-size:11px; line-height:1.4;">
      * This is a system generated receipt and does not require signatures.<br/>
      * Receipt valid subject to realization of the cheque/s.
    </div>

  </div>

</apex:page>