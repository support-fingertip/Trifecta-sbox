<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_selection_of_Blocks</fullName>
    <active>true</active>
    <errorConditionFormula>(
    TEXT(Project__r.Project_Type__c) = &apos;Villas&apos; &amp;&amp;
    TEXT(Type__c) = &apos;Apartments&apos; 
)
||
(
    TEXT(Project__r.Project_Type__c) = &apos;Apartments&apos; &amp;&amp;
    TEXT(Type__c) &lt;&gt; &apos;Apartments&apos;
)</errorConditionFormula>
    <errorMessage>Please select the appropriate block type</errorMessage>
</ValidationRule>
