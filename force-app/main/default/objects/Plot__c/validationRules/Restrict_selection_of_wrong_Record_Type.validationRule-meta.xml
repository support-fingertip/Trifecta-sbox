<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Restrict_selection_of_wrong_Record_Type</fullName>
    <active>true</active>
    <errorConditionFormula>(
    TEXT(Project__r.Project_Type__c) = &apos;Villas&apos; &amp;&amp;
    RecordType.DeveloperName = &apos;Apartment&apos;
)
||
(
    TEXT(Project__r.Project_Type__c) = &apos;Apartments&apos; &amp;&amp;
    RecordType.DeveloperName &lt;&gt; &apos;Apartment&apos;
)</errorConditionFormula>
    <errorMessage>Please select the appropriate Record Type.</errorMessage>
</ValidationRule>
