<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Primary_Phone_Number_validation</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
    LEN(Primary_Phone__c) &lt;&gt; 10,
    NOT(
        REGEX(Primary_Phone__c, &quot;^[0-9]{10}$&quot;)
    )
)</errorConditionFormula>
    <errorDisplayField>Primary_Phone__c</errorDisplayField>
    <errorMessage>Enter a valid 10-digit phone number</errorMessage>
</ValidationRule>
