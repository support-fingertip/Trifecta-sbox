<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PAN_No_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(PAN__c)),
    NOT(REGEX(PAN__c, &quot;^[A-Z]{5}[0-9]{4}[A-Z]{1}$&quot;))
)</errorConditionFormula>
    <errorDisplayField>PAN__c</errorDisplayField>
    <errorMessage>PAN must be in the format AAAAA1234A (5 letters, 4 digits, 1 letter).</errorMessage>
</ValidationRule>
