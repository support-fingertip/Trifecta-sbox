<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Ten_Digit_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Mobile_Number__c)),
    OR(
        LEN(Mobile_Number__c) &lt;&gt; 10,
        NOT(REGEX(Mobile_Number__c, &quot;^[0-9]+$&quot;))
    )
)</errorConditionFormula>
    <errorDisplayField>Mobile_Number__c</errorDisplayField>
    <errorMessage>Mobile number must be 10 digits</errorMessage>
</ValidationRule>
