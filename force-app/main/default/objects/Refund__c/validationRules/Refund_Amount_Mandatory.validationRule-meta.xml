<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Refund_Amount_Mandatory</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  NOT(ISBLANK(Refund_Amount__c)),
  Refund_Amount__c &lt;= 0
)</errorConditionFormula>
    <errorDisplayField>Refund_Amount__c</errorDisplayField>
    <errorMessage>Please Enter Refund Amount</errorMessage>
</ValidationRule>
