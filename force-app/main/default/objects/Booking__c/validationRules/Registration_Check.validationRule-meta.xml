<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Registration_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Stage__c, &apos;Registration&apos;),OR(AND(ISPICKVAL(Funding_Type__c, &apos;Self&apos;),OR(Pending_Amount__c &gt; 5)),AND(ISPICKVAL(Funding_Type__c, &apos;Loan&apos;), NOT(DD_Uploaded__c))))</errorConditionFormula>
    <errorMessage>Pending Amount for the Flat is greater than Zero, Cannot move to registration</errorMessage>
</ValidationRule>
