<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>one_Quotion_only_one_booking</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISCHANGED(Quote_status__c),
    ISPICKVAL(PRIORVALUE(Quote_status__c), &quot;Converted&quot;),
    NOT(ISPICKVAL(Quote_status__c, &quot;Converted&quot;))
)</errorConditionFormula>
    <errorMessage>Once the status is set to &apos;Converted&apos;, it cannot be changed to another status.</errorMessage>
</ValidationRule>
