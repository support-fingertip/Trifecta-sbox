<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" 
                access="global"  
                controller="MarkUnqualifiedController">
    
    <aura:attribute name="isOpen" type="Boolean" default="true"/>
    <aura:attribute name="comment" type="String" default =''/>
    <aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="selectedReason" type="String"/>
    <aura:attribute name="unqualifiedReasons" type="List"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:if isTrue="{!v.isOpen}">
        <div class="slds-modal slds-fade-in-open" tabindex="-1" role="dialog">
            <div class="slds-modal__container">
                
                <header class="slds-modal__header">
                    <h2 class="slds-modal__title">Update Unqualified Reason</h2>
                </header>
                
                <div class="slds-modal__content slds-p-around_medium">
                    <lightning:select name="unqualifiedPicklist"
                                      label="Unqualified Reason"
                                      value="{!v.selectedReason}"
                                      onchange="{!c.handleReasonChange}">
                        <option value="">-- None --</option>
                        <aura:iteration items="{!v.unqualifiedReasons}" var="reason">
                            <option value="{!reason}">{!reason}</option>
                        </aura:iteration>
                    </lightning:select>
                    <aura:if isTrue="{!v.selectedReason == 'Other'}">
                        <lightning:textarea label="Comment" value="{!v.comment}" required="true"/>
                    </aura:if>
                </div>
                
                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="Cancel" onclick="{!c.handleCancel}"/>
                    <lightning:button variant="brand" label="Submit" onclick="{!c.handleSubmit}"/>
                </footer>
            </div>
        </div>
    </aura:if>
</aura:component>