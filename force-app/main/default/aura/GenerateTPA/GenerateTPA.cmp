<aura:component controller="BookingWelcomeMail"
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader"
                access="global">

    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="LeadRecord" type="Object" />
    <aura:attribute name="bankName" type="String" />
    <aura:attribute name="projectName" type="String" />
    <aura:attribute name="recordLoadError" type="String" />

    <force:recordData aura:id="recordLoader"
                      recordId="{!v.recordId}"
                      targetFields="{!v.LeadRecord}"
                      fields="Name,OwnerId,Bank_Name__c,Project__c"
                      recordUpdated="{!c.doInit}" />

    <aura:html tag="style">
        .panel.slds-modal > .modal-container {
            width: 75%;
            max-width: 70rem;
        }
    </aura:html>

    <section class="slds-modal slds-fade-in-open" role="dialog" aria-modal="true" aria-labelledby="modal-heading">
        <header class="slds-modal__header">
            <h2 id="modal-heading" class="slds-text-heading_medium slds-hyphenate">Generate TPA</h2>
        </header>

        <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
            <iframe src="{! '/apex/apex/TRIPARTITE_AGREEMENT?Id=' + v.recordId }" width="100%" height="500px" frameBorder="0" />
        </div>

        <footer class="slds-modal__footer">
            <button class="slds-button slds-button_neutral" onclick="{!c.close}">Cancel</button>
            <button class="slds-button slds-button_brand" onclick="{!c.sendEmail}">Send Email</button>
        </footer>
    </section>
</aura:component>