<aura:component controller="QuotePdfController"
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="recordId" type="string"/>
    <aura:attribute name="LeadRecord" type="Object"/>
    <aura:attribute name="bankName" type="string"/>
    <aura:attribute name="recordTypeName" type="String"/>
    <aura:attribute name="showSendEmailOption" type="boolean" default="false"/>
    <force:recordData aura:id="recordLoader"
                      recordId="{!v.recordId}"
                      fields="Name,OwnerId,RecordType.Name,ShowSendEmailOption__c"
                      recordUpdated="{!c.doInit}"
                      targetFields="{!v.LeadRecord}"
                      targetError="{!v.recordLoadError}"
                      />
    <aura:html tag="style">
        
        .panel.slds-modal > .modal-container{
        width: 75%;
        max-width: 70rem;
        }
    </aura:html>
    <section class="slds-modal slds-fade-in-open">
        <header class="slds-modal__header">
            <h2 class="slds-text-heading_medium slds-hyphenate">Generate Cost Sheet({!v.recordTypeName})</h2>
        </header>
        <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
            <aura:if isTrue="{!v.recordTypeName == 'Apartments'}">
                <iframe src="{!'/apex/apex/TrifectaCostsheet?id=' + v.recordId}" width="100%" height="500px;" frameBorder="0"/>
            </aura:if>
            <aura:if isTrue="{!v.recordTypeName == 'Villas'}">
                <iframe src="{!'/apex/apex/trifectaVillaCostSheet?id=' + v.recordId}" width="100%" height="500px;" frameBorder="0"/>
            </aura:if>
            <aura:if isTrue="{!v.recordTypeName == 'Row House'}">
                <iframe src="{!'/apex/apex/TrifectaRowHouseCostSheet?id=' + v.recordId}" width="100%" height="500px;" frameBorder="0"/>
            </aura:if>
        </div>
        
        <footer class="slds-modal__footer">
            <button class="slds-button slds-button_neutral" onclick="{!c.close}">Cancel</button>
            <aura:if isTrue="{!v.showSendEmailOption}">
                <button class="slds-button slds-button_brand" onclick="{!c.send}">Send Email</button>
            </aura:if>
        </footer>
    </section>
</aura:component>