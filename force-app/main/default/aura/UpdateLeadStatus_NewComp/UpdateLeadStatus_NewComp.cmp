<aura:component controller="LeadStatusController"
                implements="force:appHostable,force:hasRecordId,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader"
                access="global" >
    
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="leadStatus" type="String" />
    <aura:attribute name="leadRecord" type="Object" />
    
    <aura:attribute name="rating" type="String" />
    <aura:attribute name="unqualfiedReason" type="List" />
    <aura:attribute name="recordTypeName" type="String"/>
    <aura:attribute name="statusOptions" type="List"/>
    
    <aura:attribute name="selectedReason" type="String"/>
    <aura:attribute name="selectedOpenReason" type="String"/>
    <aura:attribute name="leadLostReasons" type="List"/>
    <aura:attribute name="quotationReasons" type="List"/>
    <aura:attribute name="closedLostReasons" type="List"/>
    <aura:attribute name="openReasons" type="List"/>
    <aura:attribute name="qualifiedReasons" type="List"/>
    <aura:attribute name="selectedAllocatedReason" type="String"/>
    <aura:attribute name="comment" type="String" default=""/>
    <aura:attribute name="isOpen" type="Boolean" default="true"/>
    <aura:attribute name="showDetailReason" type="Boolean" default="false"/>

    <!-- Correct: Only one scheduleDate attribute and DateTime -->
    <aura:attribute name="scheduleDate" type="DateTime" />

    <!--Missing attribute added -->
    <aura:attribute name="svProposedDateTime" type="DateTime"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:attribute name="budgetChecked" type="Boolean" default="false"/>
    <aura:attribute name="possessionChecked" type="Boolean" default="false"/>
    <aura:attribute name="locationChecked" type="Boolean" default="false"/>
    <aura:attribute name="configurationChecked" type="Boolean" default="false"/>
    <aura:attribute name="leadQualificationRating" type="Integer" default="0"/>
    <aura:attribute name="callCount" type="Integer" default="0"/>
    <aura:attribute name="currentTime" type="String"/>

    <aura:if isTrue="{!v.isOpen}">
        <div class="slds-modal slds-fade-in-open" tabindex="-1" role="dialog">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <h2 class="slds-modal__title">Update Lead Status</h2>
                </header>

                <div class="slds-modal__content slds-p-around_medium">

                    <lightning:select label="Lead Status" value="{!v.leadStatus}" onchange="{!c.handleStatusChange}" required="true">
                        <option value="">-- Select Status --</option>
                        <aura:iteration items="{!v.statusOptions}" var="status">
                            <option value="{!status}">{!status}</option>
                        </aura:iteration>
                    </lightning:select>
                    
                    <aura:if isTrue="{!v.leadStatus == 'Open'}">
                        <lightning:select name="openReason" label="Open Reason" required="true" value="{!v.selectedOpenReason}" onchange="{!c.handleclosedReasonChange}">
                            <option value="">-- None --</option>
                            <aura:iteration items="{!v.openReasons}" var="oreason">
                                <option value="{!oreason}">{!oreason}</option>
                            </aura:iteration>
                        </lightning:select>
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'Pre Sales Follow Up' }">
                        <lightning:input type="dateTime" label="FollowUp Date" value="{!v.scheduleDate}" required="true" messageWhenValueMissing="Follow Up date is required." />
                        <lightning:textarea label="Description" value="{!v.comment}" required="true"/>
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'Qualified'}">
                        <lightning:select name="qualifiedReason" label="Qualified Stage" value="{!v.selectedAllocatedReason}" onchange="{!c.handleclosedReasonChange}">
                            <option value="">-- None --</option>
                            <aura:iteration items="{!v.qualifiedReasons}" var="oreason">
                                <option value="{!oreason}">{!oreason}</option>
                            </aura:iteration>
                        </lightning:select>
                        
                        <aura:if isTrue="{!v.selectedAllocatedReason=='SV Proposed'}">
                            <lightning:input type="datetime"
                                label="SV Proposed Date/Time"
                                value="{!v.svProposedDateTime}"
                                required="true"
                                min="{!v.currentTime}"
                                messageWhenValueMissing="Please enter SV Proposed Date/Time"/>
                        </aura:if>

                        <div class="slds-m-top_medium slds-grid slds-wrap slds-grid_align-center">
                            <lightning:input type="checkbox" label="Budget" name="Budget" value="Budget" onchange="{!c.handleCheckboxChange}" checked="{!v.budgetChecked}" class="slds-m-right_medium"/>
                            <lightning:input type="checkbox" label="Possession" name="Possession" value="Possession" onchange="{!c.handleCheckboxChange}" checked="{!v.possessionChecked}" class="slds-m-right_medium"/>
                            <lightning:input type="checkbox" label="Location" name="Location" value="Location" onchange="{!c.handleCheckboxChange}" checked="{!v.locationChecked}" class="slds-m-right_medium"/>
                            <lightning:input type="checkbox" label="Configuration" name="Configuration" value="Configuration" onchange="{!c.handleCheckboxChange}" checked="{!v.configurationChecked}"/>
                        </div>
                        
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'SV Scheduled'}">
                        <lightning:input type="dateTime" label="Schedule Date" value="{!v.scheduleDate}" required="true" messageWhenValueMissing="Follow Up date is required." />
                        <lightning:textarea label="Comments" value="{!v.comment}" required="true"/>
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'Lead Lost'}">
                        <lightning:select name="closedlostPicklist" label="Lead Lost Reason" required="true" value="{!v.selectedReason}" onchange="{!c.handleclosedReasonChange}">
                            <option value="">-- None --</option>
                            <aura:iteration items="{!v.leadLostReasons}" var="reason">
                                <option value="{!reason}">{!reason}</option>
                            </aura:iteration>
                        </lightning:select>

                        <aura:if isTrue="{!v.showDetailReason}">
                            <lightning:textarea label="Reasons in Detail" value="{!v.comment}" required="true"/>
                        </aura:if>
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'Sales Follow up'}">
                        <lightning:input type="dateTime" label="FollowUp Date" value="{!v.scheduleDate}" required="true" messageWhenValueMissing="Follow Up date is required." />
                        <lightning:textarea label="Description" value="{!v.comment}" required="true"/>
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'Quotation'}">
                        <lightning:select name="openReason" label="Quotation Stage" required="true" value="{!v.selectedReason}">
                            <option value="">-- None --</option>
                            <aura:iteration items="{!v.quotationReasons}" var="oreason">
                                <option value="{!oreason}">{!oreason}</option>
                            </aura:iteration>
                        </lightning:select>
                    </aura:if>

                    <aura:if isTrue="{!v.leadStatus == 'Closed Lost'}">
                        <lightning:select name="closedlostPicklist" label="Closed Lost Reason" value="{!v.selectedReason}" required="true" onchange="{!c.handleclosedReasonChange}">
                            <option value="">-- None --</option>
                            <aura:iteration items="{!v.closedLostReasons}" var="reason">
                                <option value="{!reason}">{!reason}</option>
                            </aura:iteration>
                        </lightning:select>

                        <aura:if isTrue="{!v.showDetailReason}">
                            <lightning:textarea label="Reasons in Detail" value="{!v.comment}" required="true"/>
                        </aura:if>
                    </aura:if>

                </div>

                <footer class="slds-modal__footer">
                    <lightning:button variant="neutral" label="Cancel" onclick="{!c.handleCancel}"/>
                    <lightning:button variant="brand" label="Submit" onclick="{!c.handleSubmit}"/>
                </footer>

            </div>
        </div>
    </aura:if>
    
</aura:component>